%ul.list-inline
  .row
    -if @stories.present?
      -@stories.each do |feature|
        =link_to mystory_path(feature) do
          %li.left.featured-story
            %ul
              %li
                -if feature.image
                  =image_tag attachment_url(feature, :image, :fill, 100,140)
                -else
                  =image_tag('layout/nocover.png', size: "100x140")
              %li=feature.title
    -else
      %li.left.featured-story No results
