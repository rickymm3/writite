%h1=@story.title
=simple_form_for [@story, @chapter] do |f|
  %div.field
    %br
    =f.input :title
    =f.label "Chapter #{new_chapter_number(@story)}"
    =f.text_area :chapter_text, class: 'ckeditor'
  %div.actions.well
    .pull-right.top-padding-submit
      =f.submit 'Save',  class: "btn btn-default"
    .clearfix