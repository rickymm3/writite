=simple_form_for [@story] do |f|
  %div.field
    %br
    = f.error_notification
    = f.input :title
    = f.input :description, as: :text, input_html: {class:"form-control"}
    = f.input :new_tags, :input_html => { class: "tokenize" }
    = f.collection_select :language, @language, :id, :language,
      prompt: "Select a Language"
    = f.input :mature, as: :radio_buttons
  %div.actions.well
    .pull-right
      =f.submit 'Reply!',  class: "btn btn-default"


