.mystories-details
  .details-container
    .row
      .cover.col-sm-3
        -if @story.image
          =image_tag attachment_url(@story, :image, :fill, 160,230)
        -else
          =image_tag('layout/nocover.png', size: "160x230")
      .details.col-sm-9
        .title=@story.title
        .info
          .left="#{num_of_chapters(@story)} Chapters"
          %li.left.tab
          .left 14 Reads
          %li.left.tab
          7 Subscribers
        .author
          .circleBase.facebook-image-circle.pull-left
            -if @story.user.provider
              = image_tag(facebook_image(@story.user.uid))
            -else
              No Image
          .name
            ="by #{@story.user.fbname}"






